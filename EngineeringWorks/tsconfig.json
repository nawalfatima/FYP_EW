      "node_modules/@types",
      "src/alertyfy.d.ts"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}

